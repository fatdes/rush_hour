{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@board/board": [
        "libs/board/src"
      ],
      "@board/board/*": [
        "libs/board/src/*"
      ],
      "@app/middleware": [
        "libs/middleware/src"
      ],
      "@app/middleware/*": [
        "libs/middleware/src/*"
      ]
    }
  }
}