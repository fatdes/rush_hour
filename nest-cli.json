{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api",
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json",
        "plugins": [
          "@nestjs/swagger"
        ]
      }
    },
    "solver": {
      "type": "application",
      "root": "apps/solver",
      "entryFile": "main",
      "sourceRoot": "apps/solver/src",
      "compilerOptions": {
        "tsConfigPath": "apps/solver/tsconfig.app.json"
      }
    },
    "board": {
      "type": "library",
      "root": "libs/board",
      "entryFile": "index",
      "sourceRoot": "libs/board/src",
      "compilerOptions": {
        "tsConfigPath": "libs/board/tsconfig.lib.json"
      }
    }
  }
}